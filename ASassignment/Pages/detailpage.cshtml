@page
@using Microsoft.AspNetCore.Identity

@using ASassignment.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model ASassignment.Pages.detailpageModel
@{
}
<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>@Html.DisplayNameFor(model => model.detail.FirstName)</h6>
                                        <p class="text-muted">@Model.detail.FirstName</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>@Html.DisplayNameFor(model => model.detail.LastName)</h6>
                                        <p class="text-muted">@Model.detail.LastName</p>
                                    </div>
                                </div>
                                <div class="col-6 mb-3">
                                        <h6>@Html.DisplayNameFor(model => model.detail.Gender)</h6>
                                        <p class="text-muted">@Model.detail.Gender</p>
                                    </div>
                                <div class="col-6 mb-3">
                                    <h6>@Html.DisplayNameFor(model => model.detail.NRIC)</h6>
                                    <p class="text-muted">@Model.detail.NRIC</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>@Html.DisplayNameFor(model => model.detail.Email)</h6>
                                    <p class="text-muted">@Model.detail.Email</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>@Html.DisplayNameFor(model => model.detail.DateOfBirth)</h6>
                                    <p class="text-muted">@Model.detail.DateOfBirth</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>@Html.DisplayNameFor(model => model.detail.Resume)</h6>
                                    <p class="text-muted">@Model.detail.Resume</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>@Html.DisplayNameFor(model => model.detail.WhoamI)</h6>
                                    <p class="text-muted">@Model.detail.WhoamI</p>
                                </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>

                
            

           
   
